programa {
  funcao inicio() {
    
    
    inteiro  i1, i2, i3, i4 
    real M
    
    //Entrada
   escreva("Digite a primeira idade:")
   leia(i1)
   escreva("Digite a segunda idade:")
   leia(i2)
   escreva("Digite a terceira idade:")
   leia(i3)
   escreva("Digite a quarta idade:")
   leia(i4)

    //Processamento
   M = (i1 + i2 + i3 + i4) / 4
    
    // Saída 
    escreva("A média de idades é:", M)
  }
}
